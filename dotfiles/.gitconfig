[user]
	name = Mattes
	email = mattes.dev@gmail.com
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue) <%an>%Creset' --abbrev-commit --date=relative
	lgf = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	l80 = "!git log --abbrev-commit --date=short --pretty=format:'%x00%h%x00%cd%x00%s%x00%an%x00%d' | gawk -F '\\0' '{ printf \"%s\\033[31m%s\\033[0m \\033[32m%s\\033[0m  %-80s \\033[30;1m%s\\033[0m\\033[33m%s\\n\", $1, $2, $3, gensub(/(.{79}).{2,}/, \"\\\\1â€¦\",\"g\",$4), $5, $6 }' | less -R"
	co = checkout
	ci = commit
	rb = rebase
	d = diff
[push]
	default = upstream
[core]
	editor = /usr/bin/vim
[pull]
	rebase = true
[heroku]
	account = personal
[credential]
	helper = osxkeychain
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
